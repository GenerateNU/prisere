{
  "name": "backend",
  "scripts": {
    "migration:gen": "NODE_ENV=development typeorm-ts-node-esm migration:generate",
    "migration:dev": "NODE_ENV=development typeorm-ts-node-esm migration:run -d ./src/typeorm-config.ts",
    "migration:prod": "NODE_ENV=production typeorm-ts-node-esm migration:run -d ./src/typeorm-config.ts",
    "dev": "NODE_ENV=development bun --hot run src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start:built": "NODE_ENV=production bun dist/server.js",
    "lint": "eslint . --config eslint.config.ts",
    "lint:fix": "eslint . --config eslint.config.ts --fix"
  },
  "type": "module",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hono/node-server": "^1.12.2",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.47.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "hono": "^4.5.10",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "reflect-metadata": "^0.2.2",
    "supabase": "^2.39.2",
    "typeorm": "^0.3.26",
    "typeorm-extension": "^3.7.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.1.0",
    "@hono/vite-dev-server": "^0.17.0",
    "@types/bun": "^1.2.21",
    "@types/node": "^20.19.12",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "jiti": "^2.5.1",
    "vite": "^5.4.2"
  }
}
